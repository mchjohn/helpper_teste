<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/footer.css">
  <title>Teste Helpper</title>
</head>
<body>
  <%- include('./partials/header.ejs') %>

  <div class="container">
    <form action="/save" method="POST">
      <div class="pe">
        <p>Cadastre um cliente</p>
      </div>
      <div class="field">
        <input type="text" name="name" id="name" placeholder="Digite seu nome">
        <% nameErro.forEach(erro => { %>
         <span class="alert"><%- erro %></span>
        <% }) %>
      </div>
      
      <div class="field">
        <input type="email" name="email" id="email" placeholder="Digite seu e-mail">
        <% emailErro.forEach(erro => { %>
          <span class="alert"><%- erro %></span>
         <% }) %>
      </div>

      <div class="field">
        <input required type="text" name="cpf" id="cpf" placeholder="Seu CPF">
      </div>

      <div class="field">
        <input required type="tel" name="phone" id="phone" placeholder="Seu numero de telefone">
      </div>

      <div class="field">
        <input required type="text" name="cep" id="cep" placeholder="Seu CEP">
      </div>

      <div class="field">
        <input required type="text" name="street" id="street" placeholder="Logradouro">
      </div>

      <div class="field">
        <input required type="text" name="number" id="number" placeholder="NÃºmero">
      </div>

      <div class="field">
        <input required type="text" name="district" id="district" placeholder="Bairro">
      </div>

      <div class="field">
        <input required type="text" name="city" id="city" placeholder="Cidade">
      </div>

      <div class="field">
        <input required type="text" name="state" id="state" placeholder="Estado">
      </div>

      <button type="submit">enviar</button>
    </form>

  </div>
  <a href="/clientes" class="goClients">
    Ver clientes cadastrados
  </a>

  <%- include('./partials/footer.ejs') %>
</body>
</html>